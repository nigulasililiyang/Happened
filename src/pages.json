{
	"easycom": {
		"autoscan": true,
		"custom": {
			// uni-ui 规则如下配置
			"^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue",
			// npm安装的方式不需要前面的"@/"，下载安装的方式需要"@/"
			// npm安装方式
			"^u-(.*)": "uview-ui/components/u-$1/u-$1.vue"
			// 下载安装方式
			// "^u-(.*)": "@/uview-ui/components/u-$1/u-$1.vue"
		}
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationStyle": "custom",
				"navigationBarTitleText": ""
			}
		}, {
			"path": "pages/contact/inedx",
			"style": {
				"navigationBarTitleText": "通讯录",
				"enablePullDownRefresh": true
			}

		}, {
			"path": "pages/mine/mine",
			"style": {
				"navigationBarTitleText": "我的",
				"enablePullDownRefresh": false
			}

		},
		{
			"path": "pages/mine/components/about",
			"style": {
				"navigationBarTitleText": "关于我们",
				"enablePullDownRefresh": false
			}
		}, {
			"path": "pages/login/index",
			"style": {
				"navigationStyle": "custom",
				"navigationBarTitleText": "",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/mine/components/privacy",
			"style": {
				"navigationBarTitleText": "巧巧用户隐私政策",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/mine/components/suggestions",
			"style": {
				"navigationBarTitleText": "意见反馈",
				"enablePullDownRefresh": false
			}

		}
	    ,{
            "path" : "pages/index/Address",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "选择地址",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/index/components/addCustomer",
            "style" :                                                                                    
            {
				"navigationStyle": "custom",  // 取消本页面的导航栏
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/index/components/editCustomer",
            "style" :                                                                                    
            {
                "navigationStyle": "custom",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/ad",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "",
                "enablePullDownRefresh": false
            }
            
        }
    ],
	"tabBar": {
		"color": "#333333",
		"selectedColor": "#0055FF ",
		"borderStyle": "black",
		"backgroundColor": "#ffffff",
		"list": [{
			"pagePath": "pages/index/index",
			"iconPath": "static/images/icon/tabs/shouye-icon-shouye-moren.png",
			"selectedIconPath": "static/images/icon/tabs/shouye-icon-shouye-xuanzhong.png"
			// "text": "首页"
		}, {
			"pagePath": "pages/contact/inedx",
			"iconPath": "static/images/icon/tabs/shouye-icon-tongxunlu-wode.png",
			"selectedIconPath": "static/images/icon/tabs/shouye-icon-tongxunlu-xuanzhong.png",
			"text": "通讯录"
		}, {
			"pagePath": "pages/mine/mine",
			"iconPath": "static/images/icon/tabs/shouye-icon-wode-moren.png",
			"selectedIconPath": "static/images/icon/tabs/shouye-icon-wode-xuanzhong.png",
			"text": "我的"
		}]
	},
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	}
}
